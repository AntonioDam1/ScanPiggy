<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#FF0000"
    card_view:cardCornerRadius="28dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/image_divisa"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÃ­a: XX/XX/XXXX "
            android:textColor="@color/white"
            android:id="@+id/text_fecha"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presupuesto de hoy: "
            android:textColor="@color/white"
            android:id="@+id/text_presupuesto"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/image_divisa"
            android:layout_below="@id/text_fecha"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/text_numeroPresupuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_presupuesto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="61dp"
            android:layout_marginRight="61dp"
            android:layout_toStartOf="@id/image_divisa"
            android:layout_toLeftOf="@id/image_divisa"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>